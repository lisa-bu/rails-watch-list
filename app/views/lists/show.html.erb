<div class="d-flex px-3 justify-content-between mt-3">
  <div class="modal fade" id="newBookmarkModal" tabindex="-1" aria-labelledby="newBookmarkModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newBookmarkModalLabel">Add a movie</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [@list, @bookmark] do |f| %>
            <%= f.input :comment %>
            <%= f.association :movie %>
            <%= f.submit 'Submit', class: 'btn btn-info' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Go back", lists_path, class: "btn btn-info"  %>
  <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#newBookmarkModal">Add a movie</button>
</div>
<div class="container">
  <h1 class="p-2"><%= @list.name %></h1>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card p-0 border-0" style="width: 18rem; border-radius: 2rem;">
        <%= image_tag bookmark.movie.poster_url, class: "card-img-top", style: "border-radius: 2rem 2rem 0 0;"%>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %> - <%= bookmark.movie.rating.round(1) %> &#11088</h5>
          <p><%= bookmark.movie.overview %></p>
          <h4>Reviews:</h4>
          <p class="card-text position-relative"> - <%= bookmark.comment %></p>
          <%= link_to "Delete", bookmark_path(bookmark),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-sm btn-danger mt-auto position-absolute card-btn-bottom card-btn-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
